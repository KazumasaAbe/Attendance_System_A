<h1>拠点情報</h1>
<div class="col-md-10 col-md-offset-1">
 <table class="table table-bordered table-condensed" id="base-table">
  <thead>
    <tr>
      <th class="center"></th>
      <th class="center"></th>
      <th class="center">拠点番号</th>
      <th class="center">拠点名</th>
      <th class="center">拠点種類</th>
    </tr>
  </thead>


  <% @bases.each do |base| %>
    <tr>
       <td class="center">
            <a class="btn btn-primary btn-base-edit" data-toggle="collapse" href="#collapse-edit<%= base.id %>" role="button">
              修正
            </a>
          </td>

      <td class="center">
         <%= link_to "削除", base, method: :delete,
                    data: { confirm: "拠点名 【#{base.base_name}】 を削除してよろしいですか？" },
                    class: "btn btn-primary user-btn" %>   
      </td>
      <td class="center"><%= base.base_number %></td>
      <td class="center"><%= base.base_name %></td>
      <td class="center"><%= base.base_type %></td>
    </tr>
     <tr>
          <td colspan="5" class="collapse-edit">
            <div class="collapse" id="collapse-edit<%= base.id %>">
              <div class="collapse-body">
                 <%= form_with(model: base, local: true) do |f| %>
                  <%#<%= render 'shared/error_messages', object: @base %>

                  <%= f.label :base_number, class: "label-#{yield(:class_text)}" %>
                  <%= f.number_field :base_number, class: "form-control" %>

                  <%= f.label :base_name, class: "label-#{yield(:class_text)}" %>
                  <%= f.text_field :base_name, class: "form-control" %>

                  <%= f.label :base_type, class: "label-#{yield(:class_text)}" %>
                  <%= f.text_field :base_type, class: "form-control" %>
                  <div style="margin-bottom: 10px"></div>
                  <%= f.submit "更新", class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
                <% end %>
              </div>
            </div>
          </td>
        </tr>
    <% end %>
</table>

 
    
      <a class="btn btn-primary btn-lg btn-office-new" data-toggle="collapse" href="#collapse-new" role="button">
        拠点情報追加
      </a>
    <div style="margin-bottom: 10px"></div>
  
  <div class="collapse" id="collapse-new">
    <div class="collapse-body">
     <%= render 'create_form' %>
    </div>
  </div>
  </div>




